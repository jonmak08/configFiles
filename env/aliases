# Ardius
######

# db
# Update Mithrin Application DB
alias db='bin/rake db:migrate'

# install
# Install Mithrin Application Ruby and NPM dependencies
alias install='bundle install && rm -rf node_modules && yarn install'

# mithrin
# Shortcut to Mithrin Application Directory
alias mithrin='cd $HOME/Projects/mithrin' 

# start
# Shortcut to open a new iTerm window to compile the Mithrin Application and start the local webserver
alias start='iterm $HOME/Projects/mithrin yarn start'

# update
# Update Mithrin Application Ruby and NPM dependencies and DB updates
alias update='bundle install && yarn && bin/rake db:migrate'

# Utility
######

# fn
# Find file by name
alias fn='find . -name '

# hs
# Search history
alias hs="history | grep --color=auto"

# qlf
# QuickLook file
alias qlf='qlmanage -p '$@' >& /dev/null'