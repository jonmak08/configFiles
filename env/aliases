# Ardius
######

# mithrin
# Shortcut to Mithrin Application Directory
alias mithrin='cd $HOME/Projects/mithrin' 

# mithrinst
# Shortcut to open a new iTerm window to compile the Mithrin Application and start the local webserver
alias mithrinst='iterm $HOME/Projects/mithrin bundle install && yarn && bin/rake db:migrate && yarn start' 

# Utility
######

# fn
# Find file by name
alias fn='find . -name '

# hs
# Search history
alias hs="history | grep --color=auto"

# qlf
# QuickLook file
alias qlf='qlmanage -p '$@' >& /dev/null'