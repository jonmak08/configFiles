# bash-git-prompt configuration
# https://github.com/magicmonty/bash-git-prompt

export BASH_GIT_PROMPT="$(brew --prefix bash-git-prompt)/share/gitprompt.sh"

export GIT_PROMPT_ONLY_IN_REPO=1
export GIT_PROMPT_THEME=Custom # use custom .git-prompt-colors.sh
export GIT_PROMPT_THEME=Default # use theme optimized for solarized color scheme

if [ -f $BASH_GIT_PROMPT ]; then
	source $BASH_GIT_PROMPT
fi