# Liferay paths

export PROJECTS_PATH="/Volumes/Projects"

export REPOS_PATH="${PROJECTS_PATH}/repo"

# Exports
export ANT_OPTS="-Xms512m -Xmx1024m -XX:MaxPermSize=512m"

export BASH_COMPLETION_PATH=`brew --prefix 2>/dev/null`/etc/bash_completion.d/git-completion.bash

export NODE_PATH="/usr/local/lib/node_modules:/usr/local/share/npm/lib/node_modules"

export MYSQL_PS1="(\u@\h) [\d]> "

export BIN_HOME="${HOME}/bin"

#export EDITOR="vi";
export EDITOR="subl -w";

export GIT_HOME="/usr/local/bin/git"

export GREP_OPTIONS="--exclude=\*.git\*"

export HISTCONTROL=erasedups
shopt -s histappend

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.7.0_51.jdk/Contents/Home
# export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Home
# export JAVA_HOME=/Library/Internet\ Plug-Ins/JavaAppletPlugin.plugin/Home

export SMARTGIT_MAX_HEAP_SIZE=2048m

export PATH=$HOME/bin:/usr/bin:/usr/local/bin:/usr/local/mysql/bin:$HOME/configFiles/bin:${LFR_PATH_REPOS}/git-tools:/usr/local/opt/ruby/bin:/usr/local/share/npm/bin:$PATH

if [[ -d $HOME/bin_private ]]; then
	export PATH=$HOME/bin_private:$PATH
fi

export UNAME=$(uname)

# Git

export hd="HEAD"

export m="master"

# Git auto-completion
# Show branch dirty state in git autocompletion script
export GIT_PS1_SHOWDIRTYSTATE="true";

# Show untracked files in git autocompletion script
export GIT_PS1_SHOWUNTRACKEDFILES="true";

# Show upstream state
export GIT_PS1_SHOWUPSTREAM="verbose"

# Config settings

# better tab complete
bind 'TAB:menu-complete'