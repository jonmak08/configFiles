[core]
	editor = mate -w
	excludesfile = /Users/jmak/.gitignore_global
	quotepath = false

[include]
	# path = /Volumes/Projects/liferay/repos/git-tools/gitconfig
	path = gitconfig_custom
	path = gitconfig_private

[push]
	default = simple

[alias]
	## Branches
	##--------
	# Display all branches
	br = branch -a
	# Rename branch
	rename = branch -m

	## Pushing
	##--------
	pbo = !git push origin -f $(git brn)
	pbu = !git push upstream  -f $(git brn)
	po = !git push origin
	pu = !git push upstream


	## Patching
	##--------

	# Create patch from files
	fp = format-patch -o patch_files
	# Save patch
	save = stash save --patch

	## Status
	##--------
	st = status

[color]
	ui = auto